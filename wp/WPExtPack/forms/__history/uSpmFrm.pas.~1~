unit uSpmFrm;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, uSpmFrame, ExtCtrls, StdCtrls;

type
  TSpmFrm = class(TForm)
    Panel1: TPanel;
    SpmFrame1: TSpmFrame;
    Panel2: TPanel;
    CancelBtn: TButton;
    ApplyBtn: TButton;
  public
    function ShowmodalEx(str:string):string;
  end;

var
  SpmFrm: TSpmFrm;

const
  c_spmopts='isFill0=1,typeWindow=1,typeMagnitude=1,kindFunc=4,numPoints=16384';

implementation

{$R *.dfm}

function TSpmFrm.ShowmodalEx(str:string):string;
var
  i:integer;
begin
  spmFrame1.SetOpts(str);
  i:=inherited Showmodal;
  if i=mrok then
  begin
    result:=spmFrame1.getopts;
  end;
end;

end.
