unit uTrigs;

interface
uses
  classes,


type
  TUnits = (u_Abs, u_percent, u_10Lg, u_20Lg);

  cTrig = class
  public
    id: string;
    x: double;
    // настройка порогов отображени€ по X
    Threshold, shift: double;
    // в какую сторону искать порог
    Front: boolean;
    TrigName: string;
    fsrcID: integer;
    number: integer;
    list: tstringlist;
    // последний обработанный
    lastid: integer;
    processed: boolean;
    // ќпредел€етс€ дл€ порога
    units: TUnits;
    // триггер старта или конца испытани€. ≈сли включен признак то все остальные пункты игнор€тс€
    // и триггер берет начало или конец испытани€
    trigtype:integer;
  private
    procedure SetSrcID(id: integer);
    function getsrcid: integer;
  public
    // возвращает значение в абсолютных величинах
    function GetAbsoluteValue(s: iwpsignal): double;
    function GenID: string;
    function GetTime(var error: boolean; src: cSrc; start: double;cb: TProcessEvent): double;overload;
    function GetTime:double;overload;
    Function Compare(t: cTrig): boolean;
    property srcid: integer read getsrcid write SetSrcID;
  end;

implementation

end.
