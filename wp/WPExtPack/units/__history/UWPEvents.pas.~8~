unit UWPEvents;

interface
uses classes;

type
  TDoubleDataEvent = procedure (data:tobject; subdata:tobject) of object;

const
  // Удаление источника сигналов
  E_OnDestroySrc = $00000040;
  // удаление сигнала
  E_OnDestroySignal = $00000080;
  // происходит при движении мыши
  E_OnAddLine = $00000100;
  // происходит при завершении обработки
  E_OnEndProcess = $00000200;
  E_OnUpdateTrigs = $00000400;


  // происходит при перерисовке страницы
  {e_onDraw = $00000200;
  // происходит при перерисовке страницы
  e_onAddPoint = $00000400;
  // происходит при перерисовке страницы
  e_onSelectPoint = $00000800;
  // происходит при перерисовке страницы
  e_onResize = $00001000;
  // происходит при линковке компонента к новому родителю, в том числе к nil
  e_onLincParent = $00002000;
  // происходит при добавлении тренда. в качестве sensder сам тренд
  e_onUpdateBound = $00004000;
  // происходит при изменении масштаба оси
  e_OnChangeAxisScale = $00008000;
  // происходит при изменении имени объекта который передается в качестве sender
  e_OnChangeName = $00010000;
  // происходит при изменении имени объекта который передается в качестве sender
  e_OnChangeColor = $00020000;
  e_OnChartResize = $00040000;
  // движение курсора мыши
  e_OnMoveCursor = $00080000;
  // сдвинули второй курсор
  e_OnMoveCursor2 = $00100000;}

implementation

end.
