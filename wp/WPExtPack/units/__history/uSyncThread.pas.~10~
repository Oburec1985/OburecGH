unit uSyncThread;

interface

uses
  Classes;

type
  cSyncThread = class(TThread)
  private
    procedure doMainThread;
  protected
    procedure Execute; override;
  public
    constructor create;override;
  end;

implementation

uses
  uWpExtPack;


constructor cSyncThread.create;
begin
  // false - автозапуск потока
  inherited create(false);
  FreeOnTerminate:=true;
end;

procedure cSyncThread.doMainThread;
begin
  extPack.CreateFrm;
end;

procedure cSyncThread.Execute;
begin
  Synchronize(doMainThread);
end;

end.
