begin

end;

procedure cComplexDiagramFact.destroyEvents;
begin

end;

destructor cComplexDiagramFact.destroy;
begin

  inherited;
end;



function cComplexDiagramFact.doCreateForm: cRecBasicIFrm;
begin

end;

procedure cComplexDiagramFact.doSetDefSize(var pSize: SIZE);
begin
  inherited;

end;

end.
