unit uTrendSignal;

interface
uses
  uMeraSignal, uTrend, uCommonTypes;

type
  cTrendSignal = class(cSignal)
  public
    function Count:integer;virtual; override;
    function GetY(i):single;virtual; override;
    function GetX(i):single;virtual; override;
    function getname:string;virtual; override;
    function SignalType:integer;virtual; override;
    function GetT0:single;virtual; override;
    function GetP2(i):point2;
  end;


implementation

function cTrendSignal.Count:integer;
begin
  result:=cTrend(obj).count;
end;

function cTrendSignal.GetP2(i):point2;
begin
  result:=cTrend(obj).getPoint(i).point;
end;

function cTrendSignal.GetY(i):single;
begin
  result:=cTrend(obj).getPoint(i).point.y;
end;

function cTrendSignal.GetX(i):single;
begin
  result:=cTrend(obj).getPoint(i).point.x;
end;

function cTrendSignal.getname:string;
begin
  result:=cTrend(obj).name;
end;

function cTrendSignal.SignalType:integer;
begin
  result:=c_2dSignal;
end;

function cTrendSignal.SignalType:integer;
begin
  result:=c_2dSignal;
end;

function cTrendSignal.GetT0:single;
begin
  result:=cTrend(obj).getPoint(0).point.x;
end;

end.
