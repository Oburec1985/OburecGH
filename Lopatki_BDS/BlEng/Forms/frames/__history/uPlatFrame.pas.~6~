unit uPlatFrame;

interface

uses
  Windows, SysUtils, Classes, Forms, uUtsSensor, ubldobj, uChan, uBldGlobalStrings,
  StdCtrls, ComCtrls, uBtnListView, uBaseObjService, utickdata, Controls,
  uBldCompProc, u2070;


type
  TPlatframe = class(TFrame)
    BufSizeCB: TComboBox;
    BuffSizeLabel: TLabel;
  private
    { Private declarations }
  public
    //  отобразить свойства объекта в фрейм
    procedure GetObj(obj:cbldobj);
    //  перенести свойства объекта из фрейма в объект
    procedure SetObj(obj:cbldobj);
  end;

implementation

{$R *.dfm}


procedure TPlatframe.GetObj(obj:cbldobj);
var
  plat:cPlat;
begin
  plat:=cUTSSensor(obj);
  BufSizeCB.Text:=plat
end;

procedure TPlatframe.SetObj(obj:cbldobj);
begin
  if UTSChannel.ItemIndex<>-1 then
  begin
    s.SetUtsChan(cChan(UTSChannel.Items.Objects[UTSChannel.ItemIndex]));
    if SEVCB.ItemIndex=0 then
    begin
      s.UTSSignalType:=IRIG_B;
    end
    else
    begin
      s.UTSSignalType:=UTS;
    end;
    ShowTicks;
  end;
end;

end.
