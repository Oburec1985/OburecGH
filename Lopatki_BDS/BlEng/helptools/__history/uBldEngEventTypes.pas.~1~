unit ubldEngEventTypes;

interface

const
  // происходит при загрузке конфигурации
  E_OnEngLoadCfg = $00000020;
  // происходит при запуске данных на просмотр в cBldTimeProc
  E_OnTimeProc = $00000040;
  // останов таймера
  E_OnTimeStartStop = $00000080;
  //////////////////////////////////////////////////////
  e_OnChangeAlgList = $00000100;
  // происходит когда кончился файл при проигрывании
  e_OnFinishPlayData = $00000200;  
  // происходит когда кончился файл при проигрывании
  e_OnAddRemoveTag = $00000400;
  // происходит когда выбрана новая ступень в опциях алгоритма
  e_OnChangeStageAlg = $00000800;
  // происходит при срабатывании аларма на теге. Внутрь передается тег
  e_OnTagAlarm = $00001000;
  // происходит при изменении состояния аларма. Внутрь передается аларм
  e_OnChangeAlarm = $00002000;

implementation

end.
