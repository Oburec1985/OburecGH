unit uEventTypes;

interface

const
  // происходит при смене имени объекта
  E_CHANGENAME = $00000001;
  // Происходит при удалении объекта. В качестве параметра Sender передается удаляемый объект
  E_OnDestroyObject = $00000002;
  // происходит при добавлоении объекта к дереву методом addchild (в параметр передается newchild)
  E_OnAddChild = $00000004;
  // происходит при добавлоении объекта к движку (в параметр передается объект)
  // вызывается уже после того как все объекты (включая дочерние) будут присоединены к двигу
  E_OnAddObj = $00000008;
  // Происходит при обновлении списка объектов
  E_OnEngUpdateList=E_OnDestroyObject+E_OnAddObj;
  // происходит при переименовании объекта
  E_OnRenameObj = $00000010;
  // происходит при переименовании объекта
  E_OnLoadObjMng = $00000020;
  E_OnAddObjInstance = $00000040;
  // происходит при срабатывании аларма на теге. Внутрь передается тег
  e_OnTagAlarm = $00001000;

implementation

end.
